{% extends 'base.html.twig' %}

{# {% form_theme formView 'bootstrap_5_layout.html.twig' %} #}

{% block title %}
	{{parent()}}
	- création d'un produit -
{% endblock %}

{% block body %}
	<h1>Nouveau produit</h1>

	{{form_start(formView)}}

	{# {{form_widget(formView)}} #}
	<div class="row">
		<div class="col">
			{{form_row(formView.name)}}
			{{form_row(formView.price)}}
		</div>
		<div class="col">
			{{form_row(formView.mainPicture)}}
			{{form_row(formView.category)}}
			{{form_row(formView.shortDescription)}}

		</div>
	</div>
	{{form_errors(formView)}}


	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>

	{{form_end(formView)}}
	{# {{form(formView)}} #}


{% endblock %}
