{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}
	- Edition du produit
	{{category.name}}
{% endblock %}

{% block body %}
	<h1>Modifier la catégorie:
		{{category.name}}
	</h1>

	{{form_start(formView)}}
	{# {{form_widget(formView)}} #}
	<div class="row">
		<div class="col">
			{{form_row(formView.name)}}
		</div>
		<button type="submit" class="btn btn-primary">
			<i class="fas fa-arrows-spin"></i>
			Mettre à jour
		</button>
		{{form_end(formView)}}
	{% endblock %}
